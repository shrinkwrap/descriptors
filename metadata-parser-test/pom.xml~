          </execution>
        </executions>
      </plugin>
      
      <!-- Surefire -->
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <!-- Run in Java5; be build with a JDK6 compiler so ensure we don't 
